<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>The Dojo Message Board</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <form action="" class="well">
                <div class="formgroup col-md-4">
                    <label for="">Name:</label>
                    <input type="text" class="form-control" name="name" placeholder="Your name">
                </div><br>
                <div class="formgroup">
                    <label for="">Message:</label>
                    <textarea class="form-control" name="message" rows="7" cols=""></textarea>
                </div><br><br><br>
                <button class="btn btn-primary col-md-offset-5">Post message</button>
            </form>
        </div>
        .row>.col-md-offset-1
    </div>
